extends layout

block content
    h1 #{title}: #{instance.imprint}
    if instance.status=='Available'
        span.text-success #{instance.status}
    else if instance.status=='Maintenance'
        span.text-danger #{instance.status}
    else
        span.text-warning #{instance.status}
    if instance.status!='Available'
        span  (Due: #{instance.due_back_formatted} )



    p Do you really want to delete this instance?

    form(method='POST' action='')
        div.form-group
        input#instanceid.form-control(type='hidden',name='instanceid', required='true', value=instance._id )

        button.btn.btn-primary(type='submit') Delete